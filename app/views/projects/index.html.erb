 &nbsp;//&nbsp; 
<a href ="<%= users_path %>" style="color:#222222"> by team member</a>
</p></div>
</div></div>


<div class="row"><p><br></p></div>





  
<% allcompletedprojects = @projects.where(complete: true).order(datecreated: :desc) %>


<% allactiveprojects = @projects.where(approved: true).order(datecreated: :desc)%>


<div class="row" id="completedbookm">
    <a href="" class="btn btn-raised btn-success">Completed</a>
  
  </div>

<div class="row">

<% if allcompletedprojects.empty?() != true %>
<% allcompletedprojects.each do |project|%>
<% if project.exists %>
 <div class="col-sm-6"> 
 <%= render "project", project: project %>

 </div>
 <% else %>
 <% end %> <!-- closes if exists statement -->
 <% end %> <!-- closes projects loop -->    
 <% end %>
</div> 
     
 <div class="row" id="activebookm">
     <a href="" class="btn btn-raised btn-info">Active</a>

   </div>

 <div class="row">

<% if allactiveprojects.empty?() != true %>
 <% allactiveprojects.each do |project|%>
 <% if project.exists %>
  <div class="col-sm-6"> 
  <%= render "project", project: project %>

  </div>
  <% else %>
  <% end %> <!-- closes if exists statement -->
  <% end %> <!-- closes projects loop -->    
  <% end %>
 </div> 
 
 
    
    
  
