<p id="notice"><%= notice %></p>


<div class="row">
    <% if @project.dateunderreview > @project.datecreated %>
        <a href="#" class="btn btn-raised btn-default">Under Review</a>
    <% end %>
    <% if @project.datereviewed > @project.dateunderreview %>
        <a href="#" class="btn btn-raised btn-info">Reviewed</a>
    <% end %>
    <% if @project.approved %>
        <a href="#" class="btn btn-raised btn-success">Approved</a>
    <% end %>
  </div>
  
  <p>
  <% if @project.new %>
  <label class="control-label red" for="inputSmall"><i>new</i></label>&nbsp;
  &nbsp;&nbsp;<% end %>

  <% if ! @project.exists %>
      <i class="material-icons red md-14">visibility_off</i>&nbsp;<label class="control-label red" for="inputSmall"><i>(Deleted entry)&nbsp;&nbsp;</i></label>
  &nbsp;&nbsp;<% end %>
  
  <!--<% if @project.metricLOS %>-->
  <!--<i class="material-icons blue md-14">vpn_key</i>-->
  <!--&nbsp;&nbsp;<% end %>-->
  
  <!--<% if @project.ondeck %>-->
  <!--<i class="material-icons md-14" style="color:#3F51B5">verified_user</i>-->
  <!--<% end %>-->
</p>
    
 <div class="well infobox">
    
     <% if @project.oldscore < @project.score %> <!-- increased score! -->
        <button type="button" class="btn btn-fab btn-fab-mini" style="color:#4caf50"><%= @project.score %></button>
     <% elsif @project.oldscore = @project.score %> <!-- score stayed same -->
         <button type="button" class="btn btn-fab btn-fab-mini" style="color:#FFAB12"><%= @project.score %></button>
     <% else %> <!-- score decreased -->
         <button type="button" class="btn btn-fab btn-fab-mini" style="color:#f44336"><%= @project.score %></button>
     <% end %>
    <button type="button" class="btn btn-fab btn-fab-mini"><i><%= @project.oldscore %></i></button>

     <% if @project.approved %>
          <label class="control-label green" for="inputSmall"> &nbsp; approved <i class="material-icons green md-18">done</i></label>
     <% else %>
     <% end %>
     
     
     <h2><%= @project.name %></h2>
     <h3><%= @project.subtitle %></h3>
     <p>
     <%= @project.description %> 
     </p>
         <label class="control-label" for="inputSmall">created on &nbsp;<%= @project.created_at.to_formatted_s(:long) %></label><br>
         <label class="control-label" for="inputSmall">under review on &nbsp;<% @project.dateunderreview.to_formatted_s(:long)  %></label><br>   
         <label class="control-label" for="inputSmall">reviewed on &nbsp;<% @project.datereviewed.to_formatted_s(:long)  %></label><br>    
         <label class="control-label" for="inputSmall"><i>edited last on &nbsp;<%= @project.updated_at.to_formatted_s(:long) %></i></label><br>
         <label class="control-label green" for="inputSmall">approved on &nbsp;<%= @project.dateapproved.to_formatted_s(:long) %></label>&nbsp;
         
     <p>
     </p>
 </div>   


 


<p>
<strong>Visible to: &nbsp;</strong>
  <% if @project.visiblepenn %>
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>Penn</button> 
  <% end %>
  <% if @project.visiblemhealth %>  
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>mH</button> 
  <% end %>
  <% if @project.visibleBrian %>  
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>BW</button> 
  <% end %>
  <% if @project.visibleDamien %>
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>DL</button> 
  <% end %>
  <% if @project.visibleBill %>  
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>BH</button> 
  <% end %>
  <% if @project.visibleNeha %>
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>NP</button> 
  <% end %>
  <% if @project.visibleSubha %>
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>SA</button> 
  <% end %>
  <% if @project.visibleRoy %>
  <button type="button" class="btn btn-fab btn-fab-mini" style='font-size:20px'>RR</button> 
  <% end %>
  
</p>

<p>
  <strong>Sent to:</strong>
  <%= @project.sendto %>


</p>

<p>
  <% if @project.metricLOS %>
  <i class="material-icons blue md-14">vpn_key</i>&nbsp;<label class="control-label blue" for="inputSmall">LOS metric&nbsp;&nbsp;</label>
 <% end %>
      <br>
  <% if @project.ondeck %>
  <i class="material-icons md-14" style="color:#3F51B5">verified_user</i>&nbsp;<label class="control-label" style="color:#3F51B5" for="inputSmall">On deck!&nbsp;&nbsp;</label>
  <% end %>
</p>



